<h6>UPDATE PROJECT PROGRESS</h6>
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="ProjectStatus" asp-action="Edit">
            @if (Model.ProjectItemStatuses.Count() > 0)
            {
<div class="form-group">
    <input type="submit" value="Update Progress" class="btn btn-info" />
</div> }
            else
            {
<br /><br />
                <a asp-action="Create" asp-controller="ProjectStatus" class="btn btn-info" asp-route-id="@Model.ProjectId">Assign Project Milestones</a>            }
            <div class="form-group">
                @for (var i = 0; i < Model.ProjectItemStatuses.Count(); i++)
