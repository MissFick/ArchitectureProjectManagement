@model ArchitectureProjectManagement.Models.ProjectStatusItemViewModel

@{ ViewData["Title"] = "Edit"; }
@Html.HiddenFor(model => model.ProjectId)
<a asp-action="Create" asp-controller="ProjectStatus" class="btn btn-warning" asp-route-id="@Model.ProjectId">Update Project Milestones</a>
<a asp-action="Index" asp-controller="ProjectStatus" class="btn btn-info" asp-route-id="@Model.ProjectId">BACK</a>

<br />
