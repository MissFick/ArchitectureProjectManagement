@model IEnumerable<ArchitectureProjectManagement.Models.ProjectItemViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.Taghelpers

@{
    ViewData["Title"] = "Index";
}
<h1> Project Item</h1>
<p>
    <a asp-action="Create" class="" btn-btn-success"><i class="fa fa-plus" aria-hidden="true"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItemName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
               @Html.DisplayFor(modelItem => item.ProjectItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectItemName)
            </td>


            <td>
                <a asp-page="/Edit" class="btn-btn-warning" asp-route-id="@item.ProjectItemId">Edit</a> |
                <a asp-page="/Details" class="btn-btn-info" asp-route-id="@item.ProjectItemId">Details</a> |
                <a asp-page="/Delete" class="btn-btn-danger" asp-route-id="@item.ProjectItemId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
@section Scripts{

}