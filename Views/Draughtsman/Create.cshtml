@model ArchitectureProjectManagement.Models.CreateDraughtsmanViewModel;

@{
    ViewData["Title"] = "Create";
}

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationUser.IdentityUser.UserName" class="control-label"></label>
