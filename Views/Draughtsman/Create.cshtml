                <span asp-validation-for="ApplicationUser.IdentityUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.FirstName" class="control-label"></label>
                <input asp-for="ApplicationUser.FirstName" class="form-control" />
                <span asp-validation-for="ApplicationUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.LastName" class="control-label"></label>
                <input asp-for="ApplicationUser.LastName" class="form-control" />
                <span asp-validation-for="ApplicationUser.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.Address" class="control-label"></label>
                <input asp-for="ApplicationUser.Address" class="form-control" />
                <span asp-validation-for="ApplicationUser.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DraughtsmanRegNo" class="control-label"></label>
                <input asp-for="DraughtsmanRegNo" class="form-control" />
                <span asp-validation-for="DraughtsmanRegNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.CompanyName" class="control-label"></label>
                <input asp-for="Company.CompanyName" class="form-control" />
                <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.CompanyContactNo" class="control-label"></label>
                <input asp-for="Company.CompanyContactNo" class="form-control" />
                <span asp-validation-for="Company.CompanyContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.CompanyEmail" class="control-label"></label>
                <input asp-for="Company.CompanyEmail" class="form-control" />
                <span asp-validation-for="Company.CompanyEmail" class="text-danger"></span>
            </div>        
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>