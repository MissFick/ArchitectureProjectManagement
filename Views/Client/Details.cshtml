@model ArchitectureProjectManagement.Models.ClientViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Details";
}

<h4>CLIENT DETAILS</h4>
<br />
<div class="row">
    <div class="col-md-4">

        @Html.HiddenFor(item => item.ClientId)

        <a asp-action="AddProperty" asp-controller="Property" class="btn-btn-warning" asp-route-id="@Model.ClientId">Add Property</a> |
        <a asp-action="ClientProjects" asp-controller="Project" class="btn-btn-warning" asp-route-id="@Model.ClientId">View Projects</a> |


        <div>
            <label><strong>@Html.DisplayNameFor(model => model.ApplicationUser.FirstName)</strong></label>
            @Html.DisplayFor(model => model.ApplicationUser.FirstName)
        </div>
        <div>
            <label><strong>@Html.DisplayNameFor(model => model.ApplicationUser.LastName)</strong></label>
            @Html.DisplayFor(model => model.ApplicationUser.LastName)
        </div>
        <div>
            <label><strong>@Html.DisplayNameFor(model => model.ApplicationUser.Address)</strong></label>
            @Html.DisplayFor(model => model.ApplicationUser.Address)
        </div>
        <div>
            <label><strong>@Html.DisplayNameFor(model => model.ApplicationUser.IdentityUser.PhoneNumber)</strong></label>
            @Html.DisplayFor(model => model.ApplicationUser.IdentityUser.PhoneNumber)
        </div>
        <div>
            <label><strong>@Html.DisplayNameFor(model => model.ApplicationUser.IdentityUser.Email)</strong></label>
            @Html.DisplayFor(model => model.ApplicationUser.IdentityUser.Email)
        </div>
        <div>
            <label><strong>@Html.DisplayNameFor(model => model.Company.CompanyName)</strong></label>
            @Html.DisplayFor(model => model.Company.CompanyName)
        </div>
        <div>
            <label><strong>@Html.DisplayNameFor(model => model.Company.CompanyContactNo)</strong></label>
            @Html.DisplayFor(model => model.Company.CompanyContactNo)
        </div>
        <div>
            @{
                if (Model.Company.CompanyLogo != null)
                {
                    var base64 = Convert.ToBase64String(Model.Company.CompanyLogo);
                    var logo = String.Format("data:image/jpg;base64,{0}", base64);

                    <img src="@logo" />
                }
            }
            <label><strong>@Html.DisplayNameFor(model => model.Company.CompanyLogo)</strong></label>
            @Html.DisplayFor(model => model.Company.CompanyLogo)
        </div>
    </div>
</div>